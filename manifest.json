{
    "manifest_version": 3,
    "name": "Background Color Changer",
    "version": "1.0.0",
    "host_permissions": ["<all_urls>"],
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
        "default_popup": "index.html"
    },
    "icons": {
        "16": "icon_16.png",
        "32": "icon_32.png",
        "48": "icon_48.png",
        "128": "icon_128.png",
        "512": "icon_512.png"
    }
}